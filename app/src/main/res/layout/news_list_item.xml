<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cccccc">

    <ImageView
        android:id="@+id/news_item_image"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false"
        android:background="@android:drawable/bottom_bar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:text="@string/news_item_sample_date"
        android:id="@+id/news_item_date"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:layout_marginRight="10dp"
        android:gravity="right"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/news_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/news_item_sample_title"
        android:layout_alignParentEnd="false"
        android:layout_above="@+id/news_item_description"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title" />

    <TextView android:id="@+id/news_item_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/news_item_image"
        android:text="@string/news_item_sample_desc"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp" />

</RelativeLayout>
